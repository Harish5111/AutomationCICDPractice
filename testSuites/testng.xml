<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite">
    
      <listeners>
        <listener class-name="viralbugindustries.TestComponents.Listeners"/>
    </listeners>

    <groups>
        <run>
            <include name="Regression"/>
        </run>
    </groups>


    <test thread-count="5" name="Submit Order test">
        <classes>
            <class name="viralbugindustries.tests.SubmitOrderTest"/>
        </classes>
    </test>

    <test thread-count="5" name="Error validation">
        <classes>
            <class name="viralbugindustries.tests.ErrorValidations"/>
        </classes>
    </test>

</suite>
